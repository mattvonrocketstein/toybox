server {
    listen          *:80;
    server_name     localhost;

    location / {
        root /opt/www;
    }
}

server {
    listen                *:5557 ;
    server_name           localhost;
    access_log            /var/log/nginx/kibana.log;
    location / {
        root  /opt/kibana/kibana;
        index  index.html  index.htm;
    }
}
